<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.carlosliam.hotelmanagementfx.controller.EmployeeNewController">
   <children>
      <HBox prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#close">
               <graphic>
                  <FontIcon iconLiteral="mdi2w-window-close" iconSize="14" />
               </graphic>
            </Button>
         </children>
      </HBox>
      <Label text="NEW TASK">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Separator prefWidth="200.0" />
      <HBox alignment="CENTER" prefWidth="200.0" spacing="10.0">
         <children>
            <TextField fx:id="tfDecription" promptText="Task's description" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox spacing="10.0">
         <children>
            <TextField fx:id="tfId" promptText="Task's ID" HBox.hgrow="ALWAYS" />
            <ChoiceBox fx:id="cbPriority" prefWidth="150.0" />
            <ChoiceBox fx:id="cbTime" prefWidth="150.0" />
         </children>
      </HBox>
      <TextField fx:id="tfType" promptText="Type assignment" />
      <HBox fx:id="dpSd" alignment="CENTER" prefHeight="27.0" prefWidth="500.0">
         <children>
            <DatePicker nodeOrientation="LEFT_TO_RIGHT" prefHeight="25.0" prefWidth="252.0" promptText="Start date">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </DatePicker>
            <DatePicker fx:id="dpFd" prefHeight="25.0" prefWidth="243.0" promptText="Finish date" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <ChoiceBox fx:id="cbEmployee" prefHeight="25.0" prefWidth="529.0" />
      <Button mnemonicParsing="false" onAction="#saveEmployee" text="Save">
         <graphic>
            <FontIcon iconLiteral="mdi2c-content-save" iconSize="15" />
         </graphic>
      </Button>
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="20.0" />
   </padding>
</VBox>
